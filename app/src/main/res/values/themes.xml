<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen Theme -->
    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo</item>
        <item name="splashScreenIconSize">50dp</item>
        <item name="postSplashScreenTheme">@style/Theme.HashGeneratorApp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.HashGeneratorApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeadingText">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>